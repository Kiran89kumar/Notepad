<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    style="@style/NoteDroid.item">

    <TextView
        android:id="@+id/txt_headline"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:text="asas"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_desc"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/elevation_normal"
        android:ellipsize="end"
        android:text="asldjasldlasjd"
        android:gravity="top|start"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:layout_below="@+id/txt_headline"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imgbtn_delete" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgbtn_delete"
        android:src="@drawable/ic_delete"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:layout_alignEnd="@+id/txt_headline" />

</RelativeLayout>


